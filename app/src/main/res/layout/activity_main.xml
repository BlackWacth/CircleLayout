<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bruce.circlelayout.MainActivity">

    <com.bruce.circlelayout.widgets.CircleLayout
        android:id="@+id/circle_layout"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@color/md_grey_300"
        android:layout_centerInParent="true">

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view00"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_red_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view01"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_purple_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view02"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_indigo_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view03"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_blue_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view04"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_cyan_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view05"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_teal_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view06"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_green_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <com.bruce.circlelayout.widgets.CircleView
            android:id="@+id/circle_view07"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:bgIcon="@color/md_lime_400"
            app:checkIcon="@drawable/check_animated_vector"/>

        <ImageView
            android:id="@+id/center_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/md_deep_orange_400"/>

    </com.bruce.circlelayout.widgets.CircleLayout>

</RelativeLayout>
